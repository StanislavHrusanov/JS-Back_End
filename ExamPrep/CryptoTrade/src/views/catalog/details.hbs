<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{offer.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{offer.name}}</h1>
                <h3 id="payment">Payment method: {{offer.paymentMethod}}</h3>
                <p id="price"><span>Price: ${{offer.price}}</span></p>
                <p id="description">{{offer.description}}</p>
            </div>
            {{#if user}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isTheOwner}}
                <div class="author">
                    <a href="/catalog/{{offer._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/catalog/{{offer._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}

                {{#if isBought}}
                <!-- Logged in user who has already buy this crypto-->
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                <a href="/catalog/{{offer._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}

                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>