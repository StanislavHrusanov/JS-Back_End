<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if error}}
    <div>
        <div class="errorContainer">
            <p>{{error}}</p>
        </div>
    </div>
    {{/if}}

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Announcement</h1>
            <h4>Post your coins to sell</h4>
            <form method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{cryptoData.name}}" placeholder="Bitcoin">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{cryptoData.image}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{cryptoData.price}}" placeholder="31,166.71">
                <label>Description:</label>
                <textarea id="description" name="description" value="{{cryptoData.description}}"
                    placeholder="Introduce your coins..."></textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option value="crypto-wallet" {{#if selectedPaymentMethod.wallet}}selected{{/if}}>Crypto
                        Wallet</option>
                    <option value="credit-card" {{#if selectedPaymentMethod.credit}}selected{{/if}}>Credit Card
                    </option>
                    <option value="debit-card" {{#if selectedPaymentMethod.debit}}selected{{/if}}>Debit Card
                    </option>
                    <option value="paypal" {{#if selectedPaymentMethod.paypal}}selected{{/if}}>PayPal</option>
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>